<resources>

    <!-- Base application theme. -->
    <style name="Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:divider">@color/colorDivider</item>
    </style>

    <!-- The toolbar theme. -->
    <style name="Theme.Toolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/colorActionBarText</item>
        <item name="android:textColorPrimaryInverse">@color/colorActionBarText</item>
        <item name="android:textColorSecondary">@color/colorActionBarText</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Theme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Widget.Button.Raised" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/raised_button_height</item>
        <item name="android:minWidth">@dimen/raised_button_min_width</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_margin</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.Widget.Button.Primary" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="Theme.Widget.Button.FloatingAction" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Regular">
        <item name="android:typeface">sans</item>
    </style>

    <style name="Medium">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Typography.Headline" parent="Regular">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Typography.Subheading" parent="Regular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Typography.Body2" parent="Medium">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
